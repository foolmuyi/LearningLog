<?xml version="1.0" encoding="UTF-8"?>
<hdevelop file_version="1.2" halcon_version="23.11.0.0">
<procedure name="main">
<interface/>
<body>
<l>read_image(Image, './images/triangle.png')</l>
<l>threshold(Image, Regions, 200, 255)</l>
<l>area_center(Regions, AreaA, ARow, ACol)</l>
<l>hom_mat2d_identity(Hom2dId)</l>
<l>dev_clear_window()</l>
<c></c>
<c>* 平移</c>
<l>hom_mat2d_translate(Hom2dId, ARow/2, ACol/2, Hom2dTrans)</l>
<l>affine_trans_image(Image, ImageTrans, Hom2dTrans, 'constant', 'false')</l>
<c></c>
<c>* 绕原点旋转</c>
<l>* hom_mat2d_rotate_local(Hom2dId, 0.3, Hom2dRotLocal)</l>
<l>* affine_trans_image(Image, ImageRotLocal, Hom2dRotLocal, 'constant', 'true')</l>
<c></c>
<c>* 绕指定点旋转</c>
<l>hom_mat2d_rotate(Hom2dId, 1.57, ARow, ACol, Hom2dRot)</l>
<l>affine_trans_image(ImageTrans, ImageRot, Hom2dRot, 'constant', 'false')</l>
<c></c>
<c>* 缩放</c>
<l>* hom_mat2d_scale_local(Hom2dId, 2, 2, Hom2dScale)</l>
<l>* affine_trans_image(Image, ImageScale, Hom2dScale, 'constant', 'true')</l>
</body>
<docu id="main">
<parameters/>
</docu>
</procedure>
</hdevelop>
